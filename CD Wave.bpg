#------------------------------------------------------------------------------
VERSION = BWS.01
#------------------------------------------------------------------------------
!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = CDWav.exe CDWav.NL CDWav.EN
#------------------------------------------------------------------------------
default: $(PROJECTS)
#------------------------------------------------------------------------------

CDWav.exe: CDWav.DPR
  $(DCC)

CDWav.NL: NL\CDWav.dpr
  $(DCC)

CDWav.EN: EN\CDWav.dpr
  $(DCC)


